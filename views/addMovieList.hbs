<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Movie List</title>
</head>

<body>
    <h1>List of Movies</h1>

    <form class="search-container" action="/fetch-movie" method="post">
        {{!-- <label for="searchTerm">Search by ID or Name:</label> --}}
        <input style="margin-right: 5px; padding: 8px; width: 200px;" type="text" id="searchTerm" name="searchTerm"
            placeholder="Movie Name or ID" required>
        <button class="submit-btn" type="submit">Fetch Details</button>
    </form>

    {{!-- {{#each movieList}}
    <div>
        <h2>{{this.title}}</h2>
        <img src="https://image.tmdb.org/t/p/w500{{this.poster_path}}" alt="{{this.title}} Poster">
        <p>{{this.overview}}</p>
        <a href="/addMovie/{{this.id}}">Add this movie</a>
        <hr>
    </div>
    {{/each}} --}}

    {{#each movieList}}
    <div class="movieDetailsContainer">
        <div class="posterContainer">
            <img src="https://image.tmdb.org/t/p/original/{{this.poster_path}}" alt="Movie Poster">
        </div>

        <div class="detailsTextContainer">
            <a href="/addMovie/{{this.id}}">
                <h2>{{this.title}}</h2>
            </a>
            <p style="font-size: 0.8em; margin-bottom:5px">{{this.overview}}</p>
            <p style="font-size: 0.8em; font-weight: bold;">Release Date: {{this.release_date}}</p>

            {{!-- <a href="/addMovie/{{this.id}}">Add this movie</a> --}}
        </div>
    </div>
    {{/each}}

</body>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
    }

    h1 {
        text-align: center;
    }

    .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 10px;
    }

    .submit-btn {
        padding: 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .formContainer {
        position: relative;
        width: 50%;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 2px solid rgb(207, 203, 203);
        padding: 10px;
        border-radius: 5px;
    }

    .formContainer label {
        text-align: left;
        width: 100%;
    }

    .formContainer input {
        width: 100%;
        box-sizing: border-box;
    }

    .movieDetailsContainer {

        padding: 10px;
        display: flex;
        align-items: center;
        width: 50%;
        margin: 0 auto;
    }

    .posterContainer {
        margin-right: 20px;
    }

    .posterContainer img {
        width: 100px;
        height: auto;
    }

    .detailsTextContainer {
        text-align: left;
    }

    .detailsTextContainer h2 {
        margin-bottom: 10px;
    }

    .detailsTextContainer p {
        margin: 0;
    }

    a {
        text-decoration: none;
        color: :'black';
    }
</style>

</html>